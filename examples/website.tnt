// Website Example for NTNT
// Demonstrates middleware and static file serving
//
// Run with: ntnt run examples/website.tnt
// Then visit: http://localhost:8080/

import { html } from "std/http/server"

// Middleware
fn logger(req) {
    print("[" + req.method + "] " + req.path)
    return ()
}

use_middleware(logger)

// Routes
fn home(req) {
    return html("<h1>Welcome</h1>")
}

get("/", home)

// Static files
serve_static("/assets", "./public")

listen(8080)
