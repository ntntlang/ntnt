Constraint: Responsive Design
  description: "Website should be mobile-friendly with proper viewport meta"
  applies_to: [feature.homepage, feature.learn_page, feature.blog_list, feature.blog_post]

Constraint: Accessible
  description: "Use semantic HTML, proper heading hierarchy, and sufficient contrast"
  applies_to: [feature.homepage, feature.learn_page, feature.blog_list, feature.blog_post]

Constraint: Fast Loading
  description: "Pages should load quickly with minimal blocking resources"
  applies_to: [feature.homepage, feature.learn_page, feature.blog_list]
