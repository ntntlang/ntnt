{
  "name": "ntnt-lang",
  "displayName": "NTNT Language (Intent)",
  "description": "Syntax highlighting and language support for the NTNT (Intent) programming language",
  "version": "0.1.0",
  "publisher": "ntnt-lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshcramer/ntnt"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "ntnt",
    "intent",
    "programming language",
    "contracts",
    "design by contract",
    "AI"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ntnt",
        "aliases": [
          "NTNT",
          "Intent",
          "ntnt"
        ],
        "extensions": [
          ".tnt"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/intent-light.png",
          "dark": "./icons/intent-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "ntnt",
        "scopeName": "source.ntnt",
        "path": "./syntaxes/ntnt.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ntnt",
        "path": "./snippets/ntnt.json"
      }
    ],
    "configuration": {
      "title": "NTNT Language",
      "properties": {
        "ntnt.copilotInstructions.autoInject": {
          "type": "boolean",
          "default": true,
          "description": "Automatically inject NTNT syntax rules into GitHub Copilot context. This helps Copilot generate correct NTNT code by including critical syntax rules like map{} vs {}, raw strings for routes, etc."
        },
        "ntnt.lint.enableOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run NTNT linter automatically when saving .tnt files"
        },
        "ntnt.lint.showWarnings": {
          "type": "boolean",
          "default": true,
          "description": "Show lint warnings in addition to errors"
        }
      }
    }
  },
  "icon": "icons/intent-logo.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  }
}
